{% extends "base.html.j2" %}

{% block content %}
<h1>📂 Resume Sections ({{ lang }})</h1>

<a href="{{ url_for('admin.add_resume_section') }}" class="btn btn-primary">➕ Add Section</a>

<table class="table mt-3">
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for section in sections %}
    <tr>
      <td>{{ section.order }}</td>
      <td>{{ section.title }}</td>
      <td>
        {% if section.is_visible %}
          ✅ Visible
        {% else %}
          🚫 Hidden
        {% endif %}
      </td>
      <td>
        <a href="#" class="btn btn-sm btn-warning">✏️ Edit</a>
        <a href="#" class="btn btn-sm btn-danger">🗑️ Delete</a>
        <a href="#" class="btn btn-sm btn-secondary">
          {% if section.is_visible %}🙈 Hide{% else %}👁️ Show{% endif %}
        </a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}
